generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Menu {
  id          Int     @id @default(autoincrement())
  meal        String
  day         Days
  items       String?
  description String?
  state       Boolean @default(true)

  @@map("menu")
}

model Items {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  creationDate DateTime @default(now())
  active       Boolean  @default(true)

  @@map("items")
}

enum Days {
  monday
  tuesday
  wednesday
  thursday
  friday
  saturday
  sunday
}
