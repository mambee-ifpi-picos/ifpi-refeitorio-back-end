{
    "openapi": "3.0.0",
    "info": {
        "title": "API Refeitório",
        "description": "Essa API serve para o agendamento das refeições do Instituto Federal do Piauí campus Picos(Usuário: aluno). Como também para um controle dos agendamentos(Usuário: adiministrador).",
        "termsOfService": "#",
        "contact": {
            "email": "capic.2021118tads0033@gmaiul.com"
        },
        "version": "1.0.0"
    },
    "serves": [
        {
            "url": "http://localhost:3000",
            "description": "API de produção"
        }
    ],
    "paths": {
        "/menu": {
            "post": {
                "summary": "Cadastrar cardápio",
                "description": "Essa rota é responsável por cadastrar um novo cardápio.",
                "tags": ["menu"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/menuWithoutStatusAndId"
                            }
                        },
                        "examples": {
                            "menu": {
                                "value": {
                                    "items": "[{name: Arroz, creationDate: 2023-12-20}, {name: Feijão, creationDate: 2023-09-12}] as Items[]",
                                    "date": "2023-12-30",
                                    "meal": "Janta"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/menuWithoutStatusAndId"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro ao cadastrar"
                    }
                }
            },
            "get": {
                "summary": "Buscar cardápios.",
                "description": "Essa rota é responsável por buscar os cardápios.",
                "tags": ["menu"],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "items": {
                                        "$ref": "#/components/schemas/menu"
                                    },
                                    "type": "array"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro ao buscar lista de cardápios."
                    }
                }
            }
        },
        "menu/{id}": {
            "put": {
                "description": "Essa rota é responsável por alterar um cardápio.",
                "summary": "Alterar cardápio.",
                "tags": ["menu"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/menuWithoutStatusAndId"
                            }
                        },
                        "examples": {
                            "menu": {
                                "value": {
                                    "items": "[{name: Arroz, creationDate: 2023-12-20}, {name: Feijão, creationDate: 2023-09-12}] as Items[]",
                                    "date": "2023-12-30",
                                    "meal": "Janta"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/changedMenuAndMessage"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro ao alterar cardápio."
                    }
                }
            },
            "delete": {
                "description": "Essa rota é responsável por deletar um cardápio.",
                "summary": "Deletar cardápio.",
                "tags": ["menu"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "msg": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro ao deletar cardápio."
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "menu": {
                "type": "object",
                "properties": {
                    "items": {
                        "items": {
                            "$ref": "#/components/schemas/items"
                        },
                        "type": "array" 
                    },
                    "date": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "meal": {
                        "type": "string"
                    },
                    "id": {
                        "type": "number"
                    },
                    "state": {
                        "type": "boolean"
                    },
                    "descriptionState": {
                        "type": "string"
                    }
                }
            },
            "menuWithoutStatusAndId": {
                "type": "object",
                "properties": {
                    "items": {
                        "items": {
                            "$ref": "#/components/schemas/itemsWithoutActiveAndId"
                        },
                        "type": "array" 
                    },
                    "date": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "meal": {
                        "type": "string"
                    },
                    "descriptionState": {
                        "type": "string"
                    }
                }
            },
            "changedMenuAndMessage": {
                "type": "object",
                "properties": {
                    "menu": {
                        "$ref": "#/components/schemas/menu"
                    },
                    "msg": {
                        "type": "string"
                    }
                }
            },
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "creationDate": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "id": {
                        "type": "number"
                    },
                    "active": {
                        "type": "boolean"
                    }
                }
            },
            "itemsWithoutActiveAndId": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "creationDate": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        }
    } 
}